<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree()</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <header>
                    <button name="hospital_change_doctor_multi" string="Change observing doctor" class="oe_highlight" type="object"/>
                </header>
                <field name="name"/>
                <field name="phone"/>
                <field name="gender"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <record id="hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="id" invisible="1"/>
                    <!--
                    name in next line start with "%(
                    <button name=action_hospital_disease_patient)d" string="Show Diseases" type="action" context="{'patient_id': id}" class="btn-primary"/>
                    -->
                    <button name="%(action_hospital_visit_history)d" string="visit history" type="action" context="{'patient_id': id}" class="btn-primary"/>
                    <button name="%(action_hospital_diagnosis_appointment_for_treatment_history)d"
                            string="Appointment for treatment history" type="action" context="{'patient_id': id}" class="btn-primary"/>
                    <button name="%(action_hospital_analysis_history)d" string="analysis history" type="action" context="{'patient_id': id}" class="btn-primary"/>
                </header>
                <sheet>
                    <group col="6">
                        <group colspan="2">
                            <field name="name" colspan="1"/>
                            <field name="phone" colspan="1"/>
                            <field name="email" colspan="1"/>
                            <field name="gender" colspan="1"/>
                        </group>
                        <group colspan="2">
                            <field name="photo" widget="image" options='{"size": [300, 300], "preview": true}' colspan="1"/>
                        </group>
                        <group colspan="2">
                            <field name="date_of_birth" colspan="1"/>
                            <field name="age" colspan="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="passport_data" style="width:50%; display:inline-block;"/>
                        <field name="contact_person_ids" widget="many2many_tags" style="width:50%; display:inline-block;"/>
                        <field name="observing_doctor_id" style="width:50%; display:inline-block;"/>
                        <field name="doctor_history_ids" style="width:50%; display:inline-block;">
                            <tree create="false" edit="false" delete="false">
                                <field name="date" width="30%"/>
                                <field name="doctor_id" width="70%"/>
                            </tree>
                        </field>
                        <field name="diagnosis_ids" string="Diseases history">
                            <tree create="false" edit="false" delete="false">
                                <field name="date"/>
                                <field name="disease_ids" widget="many2many_tags"/>
                                <field name="doctor_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hospital_patient_act_window" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hospital_patient_menu" action="hospital_patient_act_window" parent="hospital_patient_info_menu" name="Patients" sequence="100"/>
</odoo>
