    <record id="hospital_diagnosis_form" model="ir.ui.view">
        <field name="name">hospital.diagnosis.form</field>
        <field name="model">hospital.diagnosis</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <field name="visit_readonly" invisible="1"/>
                        <field name="visit_id" attrs="{'readonly': [('visit_readonly', '=', True)]}"/>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="date"/>
                        <field name="disease_ids" widget="many2many_tags"/>
                        <field name="appointment"/>
                        <field name="needed_doctor_comment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hospital_diagnosis_appointment_for_treatment_history" model="ir.actions.act_window">
        <field name="name">Appointment for treatment history</field>
        <field name="res_model">hospital.diagnosis</field>
        <field name="view_mode">tree</field>
        <field name="views">[(5, 0, 0), (ref('hospital_diagnosis_appointment_for_treatment_tree'), 'tree'),]</field>
        <field name="domain">[('patient_id', '=', patient_id)]</field>
    </record>

    <record id="hospital_diagnosis_act_window" model="ir.actions.act_window">
        <field name="name">Diagnosis</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.diagnosis</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hospital_diagnosis_menu" action="hospital_diagnosis_act_window" parent="hospital_menu_root" name="Diagnosis" sequence="500"/>

</odoo>
