<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hospital_diagnosis_tree" model="ir.ui.view">
        <field name="name">hospital.diagnosis.tree</field>
        <field name="model">hospital.diagnosis</field>
        <field name="arch" type="xml">
            <tree>
                <field name="visit_id"/>
                <!-- <field name="patient_id"/>
                    <field name="doctor_id"/>   -->
                <field name="disease_ids" widget="many2many_tags"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="hospital_diagnosis_appointment_for_treatment_tree" model="ir.ui.view">
        <field name="name">hospital.diagnosis.appointment.for.treatment.tree</field>
        <field name="model">hospital.diagnosis</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="appointment"/>
                <field name="disease_ids" widget="many2many_tags" optional="hide"/>
                <field name="doctor_id" optional="show"/>
            </tree>
        </field>
    </record>

